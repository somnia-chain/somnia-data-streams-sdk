{
  "name": "@somnia-chain/streams",
  "version": "0.9.2",
  "description": "A TypeScript SDK for Somnia streams with first class reactivity support",
  "type": "module",
  // These fields are kept for backward compatibility with older tools, 
  // but 'exports' is the modern and authoritative standard. They are aligned with 'exports' for consistency.
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts", 
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.{ts,js}'"
  },
  "keywords": [
    "typescript",
    "sdk",
    "somnia",
    "blockchain" // Added relevant keywords for better discoverability.
  ],
  "author": "Somnia Foundation",
  "license": "MIT",
  "homepage": "https://somnia-chain.com/docs/streams", 
  // Added the standard 'homepage' field for better user experience and documentation discoverability.
  "devDependencies": {
    "@types/jest": "^29.5.12", 
    // Fixed non-existent Jest version; corrected to the current stable v29 release.
    "@typescript-eslint/eslint-plugin": "8.44.1",
    "@typescript-eslint/parser": "8.44.1",
    "jest": "^29.7.0", 
    // Fixed non-existent Jest version; corrected to the current stable v29 release.
    "prettier": "3.6.2",
    "tsup": "8.5.0",
    "viem": "~2.37.8"
  },
  "peerDependencies": {
    "viem": "~2.37.8"
  },
  "exports": {
    ".": {
      // Simplified 'types' path to './dist/index.d.ts' for consistency 
      // with standard bundler output and to avoid CJS/ESM type conflicts.
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
