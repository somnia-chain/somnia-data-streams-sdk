{
  "name": "@somnia-chain/streams",
  "version": "0.7.2",
  "description": "A TypeScript SDK for Somnia streams with first class reactivity support",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.{ts,js}'"
  },
  "keywords": [
    "typescript",
    "sdk"
  ],
  "author": "Somnia Foundation",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "30.0.0",
    "@typescript-eslint/eslint-plugin": "8.44.1",
    "@typescript-eslint/parser": "8.44.1",
    "jest": "30.1.3",
    "prettier": "3.6.2",
    "tsup": "8.5.0",
    "viem": "~2.37.8"
  },
  "peerDependencies": {
    "viem": "~2.37.8"
  },
  "exports": {
    ".": {
      "types": {
        "require": "./dist/index.d.cts",
        "import": "./dist/index.d.ts"
      },
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
